<% if @errors %>
	<% @errors.each do |error| %>
	<div class="error">
		<%= error %>
	</div>
	<% end %>
<% end %>


<form action="/events/create" method="post">
	<input name="title" type="text" placeholder="title">
	<input name="date" type="date">
	<input name="organizer_name" type="text" placeholder="organizer name">
	<input name="organizer_email" type="email" placeholder="email">
	<input type="submit" value="submit">
</form>